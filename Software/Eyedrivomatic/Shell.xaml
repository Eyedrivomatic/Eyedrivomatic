<Window x:Class="Eyedrivomatic.Shell"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:prism="http://www.codeplex.com/prism"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Eyedrivomatic"
        xmlns:infrastructure="clr-namespace:Eyedrivomatic.Infrastructure;assembly=Eyedrivomatic.Infrastructure"
        xmlns:dwellclick="clr-namespace:Eyedrivomatic.Controls.DwellClick;assembly=Eyedrivomatic.Controls"
        mc:Ignorable="d"
        Title="Eyedrivomatic" Height="500" Width="1024" WindowState="Maximized"
        Icon="{StaticResource MainIcon}"
        KeyDown="Window_KeyDown">
    <Grid x:Name="LayoutRoot" Background="{StaticResource MainBackgroundBrush}">
        <AdornerDecorator IsHitTestVisible="False" />
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="25*" MaxHeight="150" />
                <RowDefinition Height="75*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="15*" />
                <ColumnDefinition Width="85*" />
            </Grid.ColumnDefinitions>
            <Viewbox Grid.Row="0" Grid.ColumnSpan="2" Stretch="Uniform" StretchDirection="DownOnly">
                <ContentControl prism:RegionManager.RegionName="{x:Static infrastructure:RegionNames.StatusRegion}"
                                Width="{Binding ElementName=LayoutRoot, Path=ActualWidth}" />
            </Viewbox>
            <Viewbox Grid.Row="1" Grid.Column="0" Stretch="Uniform" StretchDirection="DownOnly">
                <Grid VerticalAlignment="Stretch">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <ItemsControl
                        Grid.Column="0" Grid.Row="0"
                        VerticalAlignment="Top"
                        prism:RegionManager.RegionName="{x:Static infrastructure:RegionNames.MainNavigationRegion}"
                        Style="{StaticResource NavigationRegionStyle}"/>
                    <ContentControl
                        prism:RegionManager.RegionName="{x:Static infrastructure:RegionNames.SleepButtonRegion}"
                        Grid.Column="0" Grid.Row="1"
                        VerticalAlignment="Bottom"
                        BorderBrush="Green" BorderThickness="5"/>
                </Grid>
            </Viewbox>
            <ContentControl Grid.Row="1" Grid.Column="1" prism:RegionManager.RegionName="{x:Static infrastructure:RegionNames.MainContentRegion}" />
        </Grid>
    </Grid>
</Window>