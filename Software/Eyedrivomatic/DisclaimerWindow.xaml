<Window x:Class="Eyedrivomatic.DisclaimerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:dwellClick="clr-namespace:Eyedrivomatic.Eyegaze.DwellClick;assembly=Eyedrivomatic.Eyegaze"
        xmlns:l="http://gu.se/Localization"
        xmlns:resources="clr-namespace:Eyedrivomatic.Resources;assembly=Eyedrivomatic.Resources"
        mc:Ignorable="d"
        Title="Disclaimer" Height="350" Width="550" ResizeMode="NoResize" ShowInTaskbar="False" Topmost="True" WindowStartupLocation="CenterOwner" WindowStyle="None">

    <DockPanel x:Name="LayoutRoot" Background="{StaticResource WindowBackgroundBrush}">
        <Label Content="{l:Static resources:Strings.Disclaimer_Title}" DockPanel.Dock="Top" HorizontalAlignment="Center" FontWeight="Bold" FontSize="28"/>
        <Button DockPanel.Dock="Bottom" 
                Content="{l:Static resources:Strings.Disclaimer_Button}" 
                Height="50" Width="400" Margin="5" Click="Button_Click"
                dwellClick:DwellClickBehavior.IgnorePause="True"/>
        <Viewbox Margin="5">
            <TextBlock Width="470" TextWrapping="Wrap" Text="{l:Static resources:Strings.Disclaimer_Text}" FontWeight="Bold" TextAlignment="Left"/>
        </Viewbox>
    </DockPanel>
</Window>
