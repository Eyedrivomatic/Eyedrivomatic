<UserControl x:Class="Eyedrivomatic.Controls.IntUpDown"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Eyedrivomatic.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="200">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition  Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Button Grid.Column="0" Content="-" Command="{Binding RelativeSource={RelativeSource AncestorType=local:IntUpDown}, Path=IncrementCommand}" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Width="{Binding RelativeSource={RelativeSource Self}, Path=ActualHeight}"/>
        <TextBox Grid.Column="1" Text="{Binding RelativeSource={RelativeSource AncestorType=local:IntUpDown}, Path=Value}" Margin="3,0,3,0"/>
        <Button Grid.Column="2" Content="+"  Command="{Binding RelativeSource={RelativeSource AncestorType=local:IntUpDown}, Path=DecrementCommand}" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Width="{Binding RelativeSource={RelativeSource Self}, Path=ActualHeight}"/>
    </Grid>
</UserControl>
